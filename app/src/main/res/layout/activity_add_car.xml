<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kushagrakumar.myapplication.AddCarActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar1"
        android:gravity="center_vertical" />



    <!--NAME Text-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editName"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHighlight="?attr/colorPrimaryDark"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_centerHorizontal="true" />


    <!--Address Text-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editAddress"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHighlight="?attr/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignBottom="@+id/address"
        android:layout_toRightOf="@+id/address"
        android:layout_toEndOf="@+id/address" />

    <!--Car Make and Type Text-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCarMakeType"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHighlight="?attr/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/carMakeType"
        android:layout_alignBottom="@+id/carMakeType"
        android:layout_toRightOf="@+id/carMakeType"
         />


    <!--Price-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editPrice"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHighlight="?attr/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/price"
        android:layout_alignBottom="@+id/price"
        android:layout_toRightOf="@+id/price"
        />
    <!--Posting Button-->

    <TextView
        android:text="CAR MAKE AND TYPE:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/carMakeType"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_below="@+id/editAddress"
        android:layout_alignLeft="@+id/price"
        android:layout_alignStart="@+id/price" />

    <TextView
        android:text="ADDRESS:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/address"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_below="@+id/editName"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <Button
        android:text="Post my Car!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:elevation="2dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="NAME:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:id="@+id/name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_below="@+id/toolbar1"
        android:layout_toLeftOf="@+id/editName"
        android:layout_toStartOf="@+id/editName" />

    <TextView
        android:text="ASKING PRICE:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/editCarMakeType"
        android:layout_alignLeft="@+id/address"
        android:layout_alignStart="@+id/address" />


</RelativeLayout>
